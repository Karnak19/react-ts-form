{
  "name": "@karnak19/react-ts-form",
  "version": "1.0.7",
  "description": "Build forms faster!",
  "packageManager": "pnpm@7.33.7",
  "files": [
    "dist"
  ],
  "exports": {
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/types/client.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/types/server.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/types/client.d.ts"
      ],
      "server": [
        "./dist/types/server.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test": "jest",
    "build": "vite build",
    "build-test:dryrun": "act -j build-test -P ubuntu-latest=ghcr.io/catthehacker/ubuntu:js-latest",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karnak19/react-ts-form.git"
  },
  "type": "module",
  "author": "karnak19",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/karnak19/react-ts-form/issues"
  },
  "homepage": "https://github.com/karnak19/react-ts-form#readme",
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@hookform/resolvers": "^3.9.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.3.18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "@types/yargs": "^17.0.33",
    "expect-type": "^1.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0",
    "vite-plugin-externalize-deps": "^0.8.0",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@hookform/resolvers": "^3.0.0",
    "react": "^18.3.1 || ^19.0.0",
    "react-hook-form": "^7.54.2",
    "zod": "^3.24.1"
  }
}
